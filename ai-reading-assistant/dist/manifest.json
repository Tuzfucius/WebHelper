{
  "manifest_version": 3,
  "name": "AI Reading Assistant",
  "version": "1.0.0",
  "description": "Lightweight AI-powered reading assistant for academic content",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.openai.com/",
    "https://*.anthropic.com/",
    "*://*/*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "AI Reading Assistant"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.tsx-loader-BsOp-byS.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "css": [
        "assets/index-DCvC_75m.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/*",
        "assets/index-4jZj8YG4.js",
        "assets/index.tsx-CbmUJb8G.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
