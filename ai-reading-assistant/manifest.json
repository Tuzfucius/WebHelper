{
  "manifest_version": 3,
  "name": "AI Reading Assistant",
  "version": "1.0.0",
  "description": "Lightweight AI-powered reading assistant for academic content",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/",
    "https://api.anthropic.com/",
    "https://*.openai.com/",
    "https://*.anthropic.com/",
    "https://*.exa.ai/"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "AI Reading Assistant"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/index.tsx"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
